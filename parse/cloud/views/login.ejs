<% include header %>
		<div class="container">
			<div class="row center">
				<h1>Zacusca</h1>
			</div>

			<div id="fb-login-form" class="container">
				<div class="row center">
					<button id="fb-login-button" class="btn waves-effect waves-light" type="button">
						<i class="fb-icon right"></i>Conectează-te cu
					</button>
				</div>
			</div>

			<div class="divider"></div>

			<div id="signup-form" class="container">
				<div class="row">
					<div class="input-field col s12 m6">
						<i class="material-icons prefix">account_circle</i>
						<input id="first-name" class="validate" type="text">
						<label for="first-name">Prenume</label>
					</div>
					<div class="input-field col s12 m6">
						<input id="last-name" class="validate" type="text">
						<label for="last-name">Nume</label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12 m6">
						<i class="material-icons prefix">email</i>
						<input id="email" class="validate" type="email">
						<label for="email" data-error="wrong" data-success="right">Email</label>
					</div>
					<div class="input-field col s12 m6">
						<i class="material-icons prefix">phone</i>
						<input id="telephone" class="validate" type="tel">
						<label for="telephone" data-error="wrong" data-success="right">Telefon</label>
					</div>
				</div>
				<div class="row">
					<div class="input-field col s12">
						<input id="password" class="validate" type="password">
						<label for="password">Parolă</label>
					</div>
				</div>
				<div class="row center">
					<div class="col s6 m4 offset-m4">
						<button id="has-account-button" class="btn waves-effect waves-light" type="button">Am cont</button>
					</div>
					<div class="col s6 m4">
						<button id="signup-button" class="btn waves-effect waves-light" type="button">Creează cont</button>
					</div>
				</div>
			</div>

			<div id="login-form" class="container">
				<div class="row">
					<div class="input-field col s12">
						<input id="email" class="validate" type="email">
						<label for="email" data-error="wrong" data-success="right">Email</label>
					</div>
					<div class="input-field col s12">
						<input id="password" class="validate" type="password">
						<label for="password">Parolă</label>
					</div>
				</div>
				<div class="row center">
					<button id="login-button" class="btn waves-effect waves-light" type="button">Autentificare</button>
				</div>
			</div>
		</div>
<% include footer %>
