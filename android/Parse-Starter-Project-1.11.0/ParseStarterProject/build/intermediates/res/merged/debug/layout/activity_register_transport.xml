<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ro.ioc.zacusca.activities.RegisterTransportActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            style="@style/LabelTV"
            android:id="@+id/text_view_source"
            android:layout_alignParentTop="true"
            android:text="Sursa:" />

        <EditText
            style="@style/AddingET"
            android:id="@+id/edit_text_source"
            android:layout_below="@id/text_view_source"
            android:hint="Localitatea sursa" />

        <TextView
            style="@style/LabelTV"
            android:id="@+id/text_view_destination"
            android:layout_below="@id/edit_text_source"
            android:text="Destinatie:" />

        <EditText
            style="@style/AddingET"
            android:id="@+id/edit_text_destination"
            android:layout_below="@id/text_view_destination"
            android:hint="Localitatea destinatie" />


        <TextView
            style="@style/LabelTV"
            android:id="@+id/text_view_number_pkgs"
            android:layout_below="@id/edit_text_destination"
            android:text="Numar maxim pachete:" />

        <EditText
            style="@style/AddingET"
            android:id="@+id/edit_text_number_pkgs"
            android:inputType="number"
            android:layout_below="@id/text_view_number_pkgs"
            android:hint="Numar maxim de pachete" />

        <TextView
            style="@style/LabelTV"
            android:id="@+id/text_view_date"
            android:layout_below="@id/edit_text_number_pkgs"
            android:text="Data:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_info_date"
            android:layout_below="@id/text_view_date"
            android:text="None"
            android:textSize="20dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"/>

        <Button
            style="@style/Widget.AppCompat.Button.Small"
            android:id="@+id/button_choose_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alege data"
            android:textSize="35px"
            android:layout_below="@id/text_view_info_date"
            android:onClick="showDatePickerDialog" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_choose_date"
            android:layout_alignParentBottom="true"
            android:text="Inregistrare transport"
            android:textSize="45px" />

    </RelativeLayout>

</ScrollView>
